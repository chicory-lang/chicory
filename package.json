{
  "name": "@chicory-lang/compiler",
  "version": "0.0.1",
  "description": "A compiler for the Chicory language.",
  "main": "build/compile.js",
  "scripts": {
    "antlr": "antlr4ng -Dlanguage=TypeScript -o generated/ -visitor -Xexact-output-dir grammar/Chicory.g4",
    "test": "bun test",
    "generate:types": "bun x --package typescript tsc --emitDeclarationOnly --declaration --skipLibCheck --outDir ./build compile.ts",
    "build": "bun run antlr && bun test && bun run generate:types && bun build ./compile.ts --outdir ./build",
    "exec": "bun run execute"
  },
  "type": "module",
  "types": "build/compile.d.ts",
  "keywords": [
    "compiler",
    "language",
    "chicory",
    "parser",
    "programming language"
  ],
  "author": "James Cu√©nod",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chicory-lang/chicory"
  },
  "homepage": "https://chicory-lang.github.io/",
  "bugs": {
    "url": "https://github.com/chicory-lang/chicory/issues"
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "antlr4ng": "^3.0.14"
  },
  "devDependencies": {
    "@types/bun": "^1.2.2"
  }
}
